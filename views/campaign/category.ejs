                            </div>
                        </div>

                        <div class="card">
                            <div class="card-body">
                                <h4 id="rw-tb-default">Management Categories</h4>

                                <div class="table-responsive">
                                    <%
                                        var dispSort = {};
                                        %>
                                    <table class="table margin-bottom-0">
                                    <thead>
                                        <tr>
                                            <th onclick="sort('name')">No <%= (dispSort.no)?dispSort.no:''%></th>
                                            <th onclick="sort('name')" colspan="2">NAME <%= (dispSort.name)?dispSort.name:''%></th>
                                            <th onclick="sort('content')" colspan="3">CONTENT <%= (dispSort.content)?dispSort.content:''%></th>
                                            <th onclick="sort('function')" colspan="2">FUNCTION <%= (dispSort.function)?dispSort.function:''%></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (user.length == 0){%>
                                          <tr>
                                            <th scope="row">1</th>
                                            <td colspan="3">Data not found</td>
                                          </tr>
                                        <%} else {
                                              for(var i=1; i< user.length; i++){%>
                                          <tr onclick="detail('<%= user[i]._id %>');">

                                              <td><%= user[i].dispOrder %></td>
                                              <td><%= user[i].name.my %></td>
                                              <td><%= user[i].name.en %></td>
                                              <td><%= user[i].use.c %></td>
                                              <td><%= user[i].use.e %></td>
                                              <td><%= user[i].use.v %></td>

                                          </tr>
                                        <%}
                                      }
                                      %>
                                    </tbody>
                                </table>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
