                                    <button type="button" class="btn btn-light" data-toggle="modal" data-target="#formExampleModal">Launch modal</button>
                                </div>
                                <div class="col-6">
                                    <h4 id="rw-md-form-invert">Invert Form example</h4>
                                    <p class="subtitle margin-bottom-20">Same example with invered style.</p>

                                    <button type="button" class="btn btn-light" data-toggle="modal" data-target="#invertFormExampleModal">Launch modal</button>
                                </div>
                            </div>

                        </div>
                    </div>

        <!-- //END PAGE WRAPPER -->
        <% include ../partial/script %>
        <script type="text/javascript">
        $(function () {
            $modal=$("#modal");
            btnSearch.onclick = function(){
                console.log('click');
                $.ajax({
                    method: "POST",
                    url : "/campaign/category",
                    data:{name:"John", location:"Boston"}
                }).done(function(rtn){
                    var dTable = document.getElementById('dTable');
                    for(var i = 0; i< rtn.users.length ; i++){
                        var row = dTable.insertRow(dTable.rows.length);
                        var cell0 = row.insertCell(0);
                        cell0.appendChild(document.createTextNode(i+1));
                        var cell1 = row.insertCell(1);
                        cell1.appendChild(document.createTextNode(rtn.users[i].name));
                        var cell2 = row.insertCell(2);
                        cell2.appendChild(document.createTextNode(rtn.users[i].use));
                        row.setAttribute('data-row-key', rtn.users[i]._id);
                        row.onclick = function(e){
                            view($(this).attr('data-row-key'));
                        }
                    }
                }). fail(function(err){
                    console.log('ERROR',err);
                });

            }
        </script>
    </body>

