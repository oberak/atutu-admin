
<!DOCTYPE html>
<html lang="en">
    <head>
      <% include ../partial/head %>
        <title>Login &mdash; The Atutu - Admin </title>
    </head>
    <body>
        <!-- PAGE WRAPPER -->
        <div class="page">

            <!-- PAGE CONTENT WRAPPER -->
            <div class="page__content" id="page-content">

                <!-- PAGE LOGIN CONTAINER -->
                <div class="important-container login-container">

                    <div class="content">

                        <a href="/" class="logo-holder logo-holder--lg logo-holder--wide">
                            <div class="logo-text"><strong class="text-primary">#</strong> <strong>Atutu</strong></div>
                        </a>
                        <p class="caption text-center margin-bottom-30">Welcome to <strong>Atutu</strong> admin </p>

                        <form name="frm" action="/signin" method="post" autocomplete="off">
                            <div class="form-group">
                                <label>Username</label>
                                <input type="text" name="email" class="form-control" placeholder="Email or phone">
                            </div>
                            <div class="form-group margin-bottom-20">
                                <label>Password</label>
                                <input type="password" name="password" class="form-control" placeholder="Your password" autocomplete="new-password">
                            </div>

                            <div class="form-group margin-bottom-30">
                                <div class="form-row">
                                    <div class="col-6">
                                        <label class="custom-control custom-checkbox">
                                            <input type="checkbox" name="rememberme" id="rememberme" class="custom-control-input" checked="">
                                            <span class="custom-control-label" for="rememberme">Remember me</span>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group margin-bottom-30">
                                <div class="form-row">
                                    <div class="col-2"></div>
                                    <div class="col-8">
                                        <button class="btn btn-primary btn-block" type="submit">Login to account</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="divider"></div>

                        <div class="form-group text-center">
                            <div class="form-row">
                                <div class="col-4">
                                    <a href="#" class="text-muted">About us</a>
                                </div>
                                <div class="col-4">
                                    <a href="#" class="text-muted">Contacts</a>
                                </div>
                                <div class="col-4">
                                    <a href="#" class="text-muted">Support</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- PAGE LOGIN CONTAINER -->

                <!-- PAGE CONTENT CONTAINER -->
                <div class="content d-none d-lg-block" id="content" style="background: url(/img/signin.jpg) left center no-repeat; background-size: 100% auto;"></div>
                <!-- //END PAGE CONTENT CONTAINER -->

            </div>
            <!-- //END PAGE CONTENT -->

        </div>
        <!-- //END PAGE WRAPPER -->


        <% include ../partial/script %>
        <script type="text/javascript">
        $(function () {

        // when submit
        frm.onsubmit = function(){
          if(frm.rememberme.checked){
            //if checked remember then save cookieParser
            $.cookie("email", frm.email.value, { expires:7});
          }else{
            //else remove cookies
            $.removeCookie("email");
          }
        }

        //on load
        if($.cookie("email")){
          frm.email.value = $.cookie("email");
          frm.rememberme.checked = true;
        }
    });
    </script>
    </body>
</html>
